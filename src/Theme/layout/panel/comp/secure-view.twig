{% if not app.env.PANEL_SECURED and app.settings.SHOW_ADMIN_SECURE_WIZARD %}
    <div class="modal secure-view  center-grow comp-db-config" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger:soft">
                    <h5 class="modal-tixtle" id="modalVerticallyCenteredLabel">
                        Security
                    </h5>
                    <button data-smv-dismiss="modal" type="button" class="btn-close" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="fw-bold">Your Control panel is not secured. Anyone can access it.</p>
                    <form action="">
                        <label class="smv-checkbox hstack w-100 gap-2">
                            <input name="show-enabled" type="checkbox">
                            <svg width="24" height="24" viewBox="0 0 35.6 35.6">
                                <circle class="background" cx="17.8" cy="17.8"
                                        r="17.8"></circle>
                                <circle class="stroke" cx="17.8" cy="17.8"
                                        r="14.37"></circle>
                                <polyline class="check"
                                          points="11.78 18.12 15.55 22.23 25.17 12.87"></polyline>
                            </svg>
                            Don't show this again.
                        </label>
                    </form>
                    <div class="hstack gap-1">
                        <div data-smv-next class="btn btn-sm ml-auto btn-primary:hover">Secure now</div>
                        <div data-smv-dismiss="modal" class="btn btn-sm  btn-primary:hover">Cancel</div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endif %}

