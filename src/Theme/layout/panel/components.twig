{# Model creation wizard #}
<div class="modal center-grow modal-new-model" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-tixtle" id="modalVerticallyCenteredLabel">
                    Model Creation Wizard
                </h5>
                <button data-smv-dismiss="modal" type="button" class="btn-close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="vstack form-new-model gap-3">
                    <div>
                        <label>Model Name</label>
                        <input type="text" name="name" class="form-input" placeholder="Model Name">
                    </div>
                    <div>
                        <label>Table Name (Optional)</label>
                        <input type="text" name="table" class="form-input" placeholder="Table Name">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger-soft:hover py-1 btn-secondary">Cancel</button>
                        <button type="submit" class="btn btn-loader btn-primary-soft py-1 btn-primary">
                            Save changes
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


{# Data config Wizard #}
<div class="modal center-grow comp-db-config" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary:soft">
                <h5 class="modal-tixtle" id="modalVerticallyCenteredLabel">
                    Database Config Wizard
                </h5>
                <button data-smv-dismiss="modal" type="button" class="btn-close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="vstack form-db-config gap-3">
                    <div>
                        <label>Database Server</label>
                        <input type="text" name="db_server" class="form-input" placeholder="DB Server">
                    </div>
                    <div>
                        <label>Database User</label>
                        <input type="text" name="db_user" class="form-input" placeholder="DB User">
                    </div>
                    <div>
                        <label>Database Password</label>
                        <input type="text" name="bd_password" class="form-input" placeholder="DB Password">
                    </div>
                    <div>
                        <label>Database Name</label>
                        <input type="text" name="db_name" class="form-input" placeholder="DB Name">
                    </div>
                    <div class="modal-footer">
                        <button data-smv-dismiss="modal" type="button"
                                class="btn btn-danger-soft:hover py-1 btn-secondary">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-loader btn-loader btn-primary-soft py-1 btn-primary">
                            Configure
                        </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

