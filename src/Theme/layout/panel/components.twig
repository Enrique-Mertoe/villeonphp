{# confirm #}
<div class="modal center-grow d-confirm" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-0 bg-primary:soft">
                <div class="modal-tixtle color-primary" id="modalVerticallyCenteredLabel">
                    <div class="hstack gap-2">
                        <h4>
                            Confirm
                        </h4>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <p class="" data-confirm-message>Confirm</p>
                <div class="hstack gap-1">
                    <div data-confirm-ok class="btn ml-auto btn-primary:hover">Ok</div>
                    <div data-confirm-dismiss="modal" class="btn  btn-danger:hover">Cancel</div>
                </div>
            </div>

        </div>
    </div>
</div>

