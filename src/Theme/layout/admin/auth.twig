{% extends "base.twig" %}
{% block auth %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: rgba(0, 0, 0, 0.06);
        }

        .auth-card {
            border-radius: 1rem;
        }
    </style>
    <div class="row justify-content-center align-items-center vh-100 py-5">
        <!-- Main content START -->
        <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
            <!-- Sign in START -->
            <div class="card card-body auth-card text-center p-4 p-sm-5">
                <div class="hstack gap-2">
                    <img width="100" src="{{ url_for('static',{filename:'villeon/villeon.png'}) }}" alt="">
                    <h1 class="mb-2">Sign in</h1>
                </div>
                <form method="post" class="mt-sm-4 login-form">
                    <!-- Email -->
                    <div class="mb-3 input-group-lg">
                        <input type="email" class="form-input" placeholder="Enter email">
                    </div>
                    <div class="mb-3 position-relative">
                        <!-- Password -->
                        <div class="input-group input-group-lg">
                            <input class="form-input" type="password" id="psw-input"
                                   placeholder="Enter new password">
                        </div>
                    </div>
                    <!-- Remember me -->
                    <div class="mb-3 d-sm-flex justify-content-between">
                        <div>
                            <input type="checkbox" class="form-check-input" id="rememberCheck">
                            <label class="form-check-label" for="rememberCheck">Remember me?</label>
                        </div>
                        <a href="/admin/auth/reset">Forgot password?</a>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-lg btn-primary">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}